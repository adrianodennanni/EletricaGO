<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="map.net.eletricago.fragments.MainScreenFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:height="60dp"
            android:padding="6dp"
            android:text="@string/pok_dex"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:id="@+id/zoneName"
            android:textSize="22sp" />

        <TextView
            android:text="PokÃ©mon name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zoneName"
            android:layout_centerHorizontal="true"
            android:id="@+id/pokemonName" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/pokemonMiniature"
            android:layout_below="@+id/pokemonName"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:height="60dp"
            android:padding="6dp"
            android:text="Capturar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/captureButton"
            android:layout_below="@+id/pokemonMiniature"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="Capturado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemonMiniature"
            android:layout_centerHorizontal="true"
            android:id="@+id/capturedText" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_alignRight="@+id/pokemonMiniature"
            android:layout_alignEnd="@+id/pokemonMiniature"
            android:layout_alignLeft="@+id/pokemonMiniature"
            android:layout_alignStart="@+id/pokemonMiniature" />
    </RelativeLayout>
</FrameLayout>
